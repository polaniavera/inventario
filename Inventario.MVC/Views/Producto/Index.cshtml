@model IEnumerable<Inventario.Entities.Producto>

@{
    ViewData["Title"] = "Index";
}


<div class="wrapper" id="servicios">
    <div class="page-header clear-filter" filter-color="blue" style="position:relative; height: 150px;">
        <div class="page-header-image" data-parallax="true" style="background-image: url('/images/design-palettes.jpg'); ">
        </div>
        <div class="container">
            <div class="brand" style="">
                <br /><br /><br /><br /><br /><br /><br />
                <h2></h2>
            </div>
        </div>
    </div>

    <div class="main">
        <div class="section section-nucleo-icons">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <h2 class="title">Productos</h2>
                        <h5 class="description">
                            <p>
                                <a asp-action="Create"> + Crear nuevo producto</a>
                            </p>

                        </h5>

                        <div class="section section-basic">
                            <div class="container">
                                <div id="sectionwaterflooding">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Codigo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Nombre)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Descripcion)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PrecioVenta)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.StockMinimo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.StockMaximo)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Codigo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nombre)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PrecioVenta)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StockMinimo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StockMaximo)
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    
                                    <a href="@Url.Action("Index","Home")">Volver al inicio</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

